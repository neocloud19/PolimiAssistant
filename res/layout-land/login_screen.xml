<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ImageView android:id="@+id/loginscreen_icon"
            android:layout_width="wrap_content"
               android:layout_height="wrap_content"
            android:background="@drawable/polimi_logo"
            android:scaleX="0.45"
            android:scaleY="0.45"
            android:layout_marginBottom="250dp"
            android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/loginscreen_text_login"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="40dp"
            android:textColor="@color/polimiapp_main"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>



    <EditText android:id="@+id/loginscreen_input_username"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/username"
              android:textColorHint="@color/LightGrey"
              android:textSize="20dp"
              android:textColor="@color/DarkGray"
              android:textStyle="italic"
              android:layout_below="@+id/loginscreen_text_login"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="40dp"/>

    <!--

    <TextView android:id="@+id/loginscreen_input_password"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/loginscreen_input_username"
              android:inputType="textPassword"/>



    <Button android:id="@+id/loginscreen_loginbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/loginscreen_input_password"
            android:text="@string/login"/>

            -->

</RelativeLayout>